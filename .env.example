# Authentication token required by API clients to access endpoints
AUTH_TOKEN=your-secure-api-token

# Path to SQLite database file for job storage (relative or absolute)
DB_PATH=./jobs.db

# Base URL of the underlying Automatic1111 API (worker uses this to send generation requests)
AUTOMATIC1111_API_BASE=http://localhost:7860

# Server listening port (optional, default usually 3000)
PORT=3000

# CIVIT AI Token for meta data retrieval
CIVIT_AI_TOKEN=

# CIVIT AI API Endpoint
CIVIT_AI_ENDPOINT=https://api.civitai.com/v2